<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleblue"
    android:padding="8dip">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/DollarAmount"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/enterDollarAmount"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="120dp"
                android:layout_toRightOf="@+id/enterDollarAmount"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="Enter the amount"
                android:inputType="textUri"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="16dip"
            android:text="Currency Converter App"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/enterDollarAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Headline"
            android:layout_marginTop="40dp"
            android:gravity="left"
            android:padding="4dip"
            android:text="Dollar Amount ($):"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/convertto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterDollarAmount"
            android:layout_marginTop="40dp"
            android:gravity="left"
            android:padding="4dip"
            android:text="Convert to:"
            android:textColor="@android:color/black"
            android:textSize="23dp" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <Spinner
            android:id="@+id/spinner"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="195dp"
                android:layout_marginLeft="200dp"
                android:layout_toRightOf="@+id/convertto"
                android:textAlignment="center"
                android:entries="@array/spinner_items"
                android:spinnerMode="dropdown"
            android:background="@android:color/background_light"/>
        </LinearLayout>

        <Button
            android:id="@+id/convert"
            android:layout_width="190dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="375dp"
            android:background="@color/green"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Convert"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/close"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="375dp"
            android:background="@color/red"
            android:onClick="finishMainActivity"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/convertedvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/convert"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:padding="4dip"
            android:text="Dollar Amount Conversion"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>


